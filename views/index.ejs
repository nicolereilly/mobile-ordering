  <h1>Hi there, welcome to Trowbridge's mobile ordering system. Place your order down below!</h1>

  <h3>Start order below:</h3>

  <form method="POST" action="/addDrink">
    <label for="drink_name">Flavor: </label>
    <input name="drink_name" value="vanilla">
    <br>
    <label for="size">PRICE: </label>
    <input name="size" value="$2.99">
    <br>
    <input type="submit" value="Create" />
  </form>


  <h3>Update your items</h3>
  <% for (var i=0; i< drinkData.length; i++ ) { %>
  <form method="POST" action="/updateDrink/<%= drinkData[i]._id %>" style="display: inline-block">
    <%= drinkData[i].drink_name %> (<%= drinkData[i].size %>)
      <input type="submit" value="Update">
  </form>
  <br>
  <% } %>

  <h3>Delete your items</h3>
  <% for (var i=0; i< drinkData.length; i++ ) { %>
  <form method="POST" action="/deleteDrink/<%= drinkData[i]._id %>" style="display: inline-block">
    <%= drinkData[i].drink_name %> (<%= drinkData[i].size %>)
      <input type="submit" value="Delete">
  </form>
  <br>
  <% } %>



